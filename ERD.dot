digraph ERD {
    graph [label="Homestead Management System - ERD", labelloc=t, fontsize=20, rankdir="TB"];
    node [shape=record, style=filled, fillcolor=lightblue];
    edge [color=gray, arrowhead=crow, arrowtail=none];

    // Entities
    User [label="{User | + userId (PK)\l+ name\l+ email\l+ password\l+ role\l+ avatar\l+ isVerified\l...timestamps\l}"];
    Property [label="{Property | + propertyId (PK)\l+ hostId (FK)\l+ title\l+ description\l+ location\l+ pricePerNight\l+ maxGuests\l+ averageRating\l...timestamps\l}"];
    Booking [label="{Booking | + bookingId (PK)\l+ travelerId (FK)\l+ propertyId (FK)\l+ hostId (FK)\l+ startDate\l+ endDate\l+ totalPrice\l+ status\l...timestamps\l}"];
    Review [label="{Review | + reviewId (PK)\l+ userId (FK)\l+ propertyId (FK)\l+ rating\l+ comment\l...timestamps\l}"];
    Amenity [label="{Amenity | + amenityId (PK)\l+ name\l}"];
    PropertyAmenity [label="{PropertyAmenity | + propertyId (FK)\l+ amenityId (FK)\l}"];

    // Relationships
    User -> Property [label="hosts (one-to-many)", dir=both, arrowtail=none, arrowhead=crow];
    User -> Booking [label="makes (one-to-many)", dir=both, arrowtail=none, arrowhead=crow];
    User -> Review [label="writes (one-to-many)", dir=both, arrowtail=none, arrowhead=crow];
    
    Property -> Booking [label="is for (one-to-many)", dir=both, arrowtail=none, arrowhead=crow];
    Property -> Review [label="has (one-to-many)", dir=both, arrowtail=none, arrowhead=crow];
    
    Property -> PropertyAmenity [label="has", dir=both, arrowtail=none, arrowhead=crow];
    Amenity -> PropertyAmenity [label="is an", dir=both, arrowtail=none, arrowhead=crow];
}
